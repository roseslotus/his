<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/shape_xiaohuijilu_bg_item"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingBottom="5dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:gravity="center_vertical"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_xiaofeijilu_danzi"
                    />
                <TextView
                    android:id="@+id/tv_product_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#FF424242"
                    android:text="鼻综合整形（肋骨）"
                    android:layout_marginLeft="10dp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_xiaofeijilu_danzi"
                    />
                <TextView
                    android:id="@+id/tv_operating_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#FF808184"
                    android:text="2018-11-12"
                    android:layout_marginLeft="10dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_xiaofeijilu_danzi"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#FF808184"
                    android:text="术前照"
                    android:layout_marginLeft="10dp"
                    />

                <TextView
                    android:id="@+id/tv_preparation_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="[5张]"
                    android:textColor="#FF2CBCC1"
                    android:textSize="12sp" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" ></View>
                <TextView
                    android:id="@+id/tv_preparation_look"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:text="查看"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/shape_green_round4"
                    android:paddingBottom="4dp"
                    android:paddingTop="4dp"
                    android:paddingLeft="13dp"
                    android:paddingRight="13dp"
                    android:layout_toLeftOf="@+id/iv_image_right"
                    android:layout_centerVertical="true"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_xiaofeijilu_danzi"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#FF808184"
                    android:text="术中照"
                    android:layout_marginLeft="10dp"
                    />
                <TextView
                    android:id="@+id/tv_operating_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#FF2CBCC1"
                    android:text="[5张]"
                    android:layout_marginLeft="2dp"
                    />
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" ></View>
                <TextView
                    android:id="@+id/tv_operating_look"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:text="查看"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/shape_green_round4"
                    android:paddingBottom="4dp"
                    android:paddingTop="4dp"
                    android:paddingLeft="13dp"
                    android:paddingRight="13dp"
                    android:layout_toLeftOf="@+id/iv_image_right"
                    android:layout_centerVertical="true"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_xiaofeijilu_danzi"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#FF808184"
                    android:text="术后照"
                    android:layout_marginLeft="10dp"
                    />
                <TextView
                    android:id="@+id/tv_operated_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#FF2CBCC1"
                    android:text="[5张]"
                    android:layout_marginLeft="2dp"
                    />
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" ></View>
                <TextView
                    android:id="@+id/tv_operated_look"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:text="查看"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/shape_green_round4"
                    android:paddingBottom="4dp"
                    android:paddingTop="4dp"
                    android:paddingLeft="13dp"
                    android:paddingRight="13dp"
                    android:layout_toLeftOf="@+id/iv_image_right"
                    android:layout_centerVertical="true"
                    />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>