<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/green_50">

        <ImageView
            android:id="@+id/return_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="15dp"
            android:paddingRight="20dp"
            android:src="@mipmap/return_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="详情"
            android:textColor="@android:color/white"
            android:textSize="16sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="10dp">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/user_icon" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="张飞"
                android:textColor="@color/black_50" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="131****1152"
                android:textColor="@color/black_50" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/line_box_orange_3"
            android:paddingBottom="1dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="2dp"
            android:text="门诊"
            android:textColor="@color/orange_50"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@mipmap/doctor_icon"
            android:text="安文军" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="病历号："
            android:textColor="@color/gray_50" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="201710060215"
            android:textColor="@color/gray_50" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:background="@drawable/bg_white_line_gray_below"
        android:orientation="horizontal"
        android:paddingBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="产品："
            android:textColor="@color/black_50" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="201710060215"
            android:textColor="@color/black_50" />
    </LinearLayout>

    <TextView
        android:id="@+id/medical_record_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_white_line_gray_above"
        android:drawableLeft="@mipmap/record_icon"
        android:drawablePadding="5dp"
        android:drawableRight="@mipmap/right_arrows_icon"
        android:padding="10dp"
        android:text="治疗记录"
        android:textColor="@color/black_50" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_line_gray_above"
        android:drawableLeft="@mipmap/medical_records_icon"
        android:drawablePadding="5dp"
        android:drawableRight="@mipmap/right_arrows_icon"
        android:padding="10dp"
        android:text="纸质病历"
        android:textColor="@color/black_50" />

    <TextView
        android:id="@+id/medical_information_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_line_gray_above"
        android:drawableLeft="@mipmap/paper_icon"
        android:drawablePadding="5dp"
        android:drawableRight="@mipmap/right_arrows_icon"
        android:padding="10dp"
        android:text="病历信息"
        android:textColor="@color/black_50" />

    <TextView
        android:id="@+id/prescription_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_line_gray_above"
        android:drawableLeft="@mipmap/prescription_icon"
        android:drawablePadding="5dp"
        android:drawableRight="@mipmap/right_arrows_icon"
        android:padding="10dp"
        android:text="已开处方"
        android:textColor="@color/black_50" />

    <TextView
        android:id="@+id/consumption_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_line_gray_above"
        android:drawableLeft="@mipmap/consumption_icon"
        android:drawablePadding="5dp"
        android:drawableRight="@mipmap/right_arrows_icon"
        android:padding="10dp"
        android:text="消费记录"
        android:textColor="@color/black_50" />

</LinearLayout>
