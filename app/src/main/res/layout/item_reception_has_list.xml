                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:background="@drawable/btn_blue_5"
                android:gravity="center"
                android:padding="5dp"
                android:text="住院押金"
                android:textColor="@color/white" />


        </LinearLayout>

