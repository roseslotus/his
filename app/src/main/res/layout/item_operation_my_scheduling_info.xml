<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/shape_xiaohuijilu_bg_item"
        >
        <include layout="@layout/item_customer_base_info"></include>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FFF7F7F7" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:gravity="center_vertical"
            >
            <TextView
                android:id="@+id/tv_project_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="经典自体脂肪双侧 (含2部位吸脂)"
                android:textColor="#FF575757"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:paddingBottom="10dp"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="麻醉方式:"
                android:textColor="#FF575757"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/tv_anesthesia_method"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="局部麻醉"
                android:textColor="#FF575757"
                android:layout_marginLeft="10dp"
                android:textSize="12sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:paddingBottom="10dp"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手术医生:"
                android:textColor="#FF575757"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/tv_doctor_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="赵越胜"
                android:textColor="#FF575757"
                android:layout_marginLeft="10dp"
                android:textSize="12sp" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FFF7F7F7" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingTop="9dp"
                android:paddingBottom="9dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="假体状态"
                    android:textColor="#AEAEAE"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/tv_prosthesis_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:text="已到货"
                    android:textColor="#2CBCC1"
                    android:textSize="12sp" />
            </LinearLayout>
            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#D8D8D8"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                ></View>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingTop="9dp"
                android:paddingBottom="9dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="皮试状态"
                    android:textColor="#AEAEAE"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_skintest_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:text="通过"
                    android:textColor="#2CBCC1"
                    android:textSize="12sp" />
            </LinearLayout>
            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#D8D8D8"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                ></View>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingTop="9dp"
                android:paddingBottom="9dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="检查检验"
                    android:textColor="#AEAEAE"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/tv_medicalexam_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:text="通过"
                    android:textColor="#2CBCC1"
                    android:textSize="12sp" />
            </LinearLayout>
            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#D8D8D8"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                ></View>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                >
                <ImageView
                    android:id="@+id/iv_test_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_shoushu_wodepaiqi_tongguo"
                    />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>