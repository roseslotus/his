<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/green_50">

        <ImageView
            android:id="@+id/return_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="15dp"
            android:paddingRight="20dp"
            android:src="@mipmap/return_icon" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/screening_text"
            android:layout_toRightOf="@id/return_btn"
            android:background="@drawable/bg_white_line_box_gray_5"
            android:hint="搜索历史治疗客人"
            android:padding="5dp"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/screening_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawableLeft="@mipmap/screening_white_icon"
            android:drawablePadding="3dp"
            android:gravity="center"
            android:padding="8dp"
            android:text="全部"
            android:textColor="@color/white" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#8000B6B9"
            android:padding="10dp"
            android:text="前一天"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#9900B6B9"
            android:gravity="center"
            android:padding="10dp"
            android:text="2018-10-23"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#8000B6B9"
            android:padding="10dp"
            android:text="后一天"
            android:textColor="@color/white" />
    </LinearLayout>

    <ListView
        android:id="@+id/medical_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_line_gray_below"
        android:divider="@color/gray_48"
        android:dividerHeight="1px" />


</LinearLayout>
