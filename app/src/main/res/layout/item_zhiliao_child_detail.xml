<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        >
        <TextView
            android:id="@+id/tv_second_project_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上脸皮肤量调整经典切开重塑"
            android:textColor="#2CBCC1"
            android:textSize="14sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        >
        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="主治医生:"
            android:textColor="#949595"
            android:textSize="12sp"
            android:gravity="right|center_vertical"
            />
        <TextView
            android:id="@+id/tv_zhuzhi_yisheng"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="张晨阳"
            android:textColor="#575757"
            android:textSize="12sp"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="医助:"
            android:textColor="#949595"
            android:textSize="12sp"
            android:gravity="right|center_vertical"
            />
        <TextView
            android:id="@+id/tv_yi_zhuli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="李婷婷"
            android:textColor="#575757"
            android:textSize="12sp"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        >
        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="执行人:"
            android:textColor="#949595"
            android:textSize="12sp"
            android:gravity="right|center_vertical"
            />
        <TextView
            android:id="@+id/tv_zhixingren"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="#575757"
            android:textSize="12sp"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="使用量:"
            android:textColor="#949595"
            android:textSize="12sp"
            android:gravity="right|center_vertical"
            />
        <TextView
            android:id="@+id/tv_use_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="#575757"
            android:textSize="12sp"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="10dp"
        >
        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="治疗时间:"
            android:textColor="#949595"
            android:textSize="12sp"
            android:gravity="right|center_vertical"
            />
        <TextView
            android:id="@+id/tv_treat_time"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="2018-11-12 15:33"
            android:textColor="#575757"
            android:textSize="12sp"
            android:layout_marginLeft="10dp"
            />

    </LinearLayout>

</LinearLayout>