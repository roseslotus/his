<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:gravity="center_vertical"

        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >
            <TextView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:text="1组"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:gravity="center"
                android:background="@drawable/shape_green_circle"
                />
            <TextView
                android:id="@+id/tv_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="钠钾镁钙葡萄糖注射液"
                android:textColor="#595959"
                android:textSize="14sp"
                android:layout_marginLeft="12dp"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[临时]"
                android:textColor="#FC9E39"
                android:textSize="14sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="38dp"
            >
            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#8B8C90"
                android:text="医生:"
                />
            <TextView
                android:id="@+id/tv_doctor_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#595959"
                android:text="叶婷婷"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="38dp"
            android:paddingTop="5dp"
            >
            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#8B8C90"
                android:text="开立时间:"
                />
            <TextView
                android:id="@+id/tv_order_create_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#595959"
                android:text="14:23"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="38dp"
            android:paddingTop="5dp"
            android:paddingBottom="10dp"
            >
            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#8B8C90"
                android:text="确认时间:"
                />
            <TextView
                android:id="@+id/tv_order_confirm_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#595959"
                android:text="14:23"
                />
        </LinearLayout>


    </LinearLayout>
    <TextView
        android:id="@+id/tv_order_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已执行"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:background="@drawable/shape_green_round4"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:layout_marginRight="15dp"
        />
</RelativeLayout>